<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:effects="clr-namespace:EvoTransitions.Effects;assembly=EvoTransitions"
    x:Class="EvoTransitions.SecondPage" 
    BackgroundColor="Blue" 
    Title="Second Page">

    <StackLayout>
        <StackLayout VerticalOptions="Start" HorizontalOptions="Center">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="ImageTapped"/>
            </StackLayout.GestureRecognizers>

            <Image Source="mydog.jpg" effects:TagEffect.Tag="1" WidthRequest="100" HorizontalOptions="Center" VerticalOptions="Start"/>
            <Image Source="mydog.jpg" effects:TagEffect.Tag="2" HorizontalOptions="Center" VerticalOptions="Start" />
            <Button Text=" Button " effects:TagEffect.Tag="3" BackgroundColor="Aqua" />
        </StackLayout>
    </StackLayout>

</ContentPage>
